<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="All tests" parallel="classes" thread-count="2">
    <test name="All tests" preserve-order="true">
        <parameter name="browser" value="FIREFOX"/>
        <classes>
            <class name="tests.PageObjectTests">
                <methods>
                    <include name="scrollPage" />
                    <include name="checkNumberOfTripsInNewYork" />
                    <include name="getReferenceCode" />
                    <include name="openLandingPage" />
                    <include name="loginToApp" />
                    <include name="registerNewUser_LoggedAsNewUser" />
                </methods>
            </class>
            <class name="tests.SecondPageObjectTests">
                <methods>
                    <include name="second_checkNumberOfTripsInNewYork" />
                    <include name="second_getReferenceCode" />
                    <include name="second_openLandingPage" />
                    <include name="second_loginToApp" />
                    <include name="second_registerNewUser_LoggedAsNewUser" />
                </methods>
            </class>
        </classes>
    </test>
</suite>